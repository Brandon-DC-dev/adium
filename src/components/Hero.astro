---
const personalImageAlt = "Brandon Diaz"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import Curriculum from "@/components/icons/Curriculum.astro"
import SocialPill from "@/components/SocialPill.astro"

import t from 'astro-i18next';

---



<div class="w-full min-h-screen flex flex-col justify-center items-center text-gray-800 dark:text-white font-poppins text-center px-8 relative">

  <!-- ASOFARMA (Centro principal) -->
  <h1 class="text-8xl sm:text-9xl font-extrabold tracking-tight mb-10 relative z-10">
    ASOFARMA
  </h1>

  <!-- Texto lateral izquierdo y derecho -->
  <div class="w-full relative flex justify-center items-center">
    <!-- Izquierda -->
    <div class=" left-[15%] sm:left-[18%] text-3xl sm:text-5xl font-semibold text-left">
      PLANETA ADIUM
    </div>

    <!-- Derecha -->
    <div class=" right-[15%] sm:right-[18%] flex flex-col text-right leading-tight">
      <span class="text-4xl sm:text-5xl font-semibold">GEN A26</span>
      <span class="text-3xl sm:text-4xl font-semibold">EVOLUCIÓN SIN LÍMITES</span>
    </div>
  </div>
</div>
